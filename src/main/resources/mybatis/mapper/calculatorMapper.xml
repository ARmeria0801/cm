<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="calculatorMapper">
	<!-- 정산리스트 개수 -->
	<select id="select_calcul_count" resultType="int" parameterType="int">
		select count(*) from calculate where sel_num=#{sel_num}
	</select>
	
	<!-- 판매자별 정산리스트  출력 -->
	<select id="select_calcul_list" resultType="calculate" parameterType="java.util.Map">
		select * from calculate
		where sel_num=#{sel_num}
		order by clcln_num desc
		limit #{pageIndex}, 10
	</select>
	
	<!-- 판매자별 정산리스트  출력 -->
	<select id="select_calcul_detail" resultType="calculate" parameterType="int">
		select * from calculate
		<!-- where sel_num=${sel_num} -->
		where clcln_num=#{clcln_num}
	</select>

</mapper>