<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="categoryMapper">

	<!-- 대분류코드 불러오기 -->
	<select id="select_lcate_list" resultType="lcate">
		select * from lcate
	</select>
	
	<!-- 대분류코드로 중분류 불러오기 -->
	<select id="select_mcate_list" resultType="mcate" parameterType="int">
		select * from mcate where lcate_code=#{lcate_code}
	</select>
	
	<!-- 중분류코드로 중분류 불러오기 -->
	<select id="select_scate_list" resultType="scate" parameterType="int">
		select * from scate where mcate_code=#{mcate_code}
	</select>

</mapper>