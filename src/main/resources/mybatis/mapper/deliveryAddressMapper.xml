<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="deliveryAddressMapper">
<select id="select_deliveryadress" parameterType="int" resultType="deliveryAddress">
	select * from deliveryAddress where mem_num=#{mem_num}
</select> 

<update id="update_deliveryadress" parameterType="deliveryAddress">
	update deliveryAddress 
	set 
	deladd_post=#{deladd_post},
	deladd_add1=#{deladd_add1},
	deladd_add2=#{deladd_add2}
	where deladd_num=#{deladd_num}

</update>

</mapper>