<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="mypageMapper">
  
  <!-- 게시판 총게시물 수 -->
  <select id="history_count" resultType="int">
  select count(ord_num) from project.order
  </select>
  
  <!--게시판 목록 -->
  	<select id="history_list" parameterType="int" resultType="order">
      select * from project.order
      order by rev_num desc
      limit #{pageIndex}, 5
  	</select>
  
  <!-- 주문내역 상세 -->
  <!-- 판매자별 정산리스트  출력 -->
	<select id="history_detail" resultType="order" parameterType="int">
		select * from project.order
		<!-- where sel_num=${sel_num} -->
		where ord_num=#{ord_num}
	</select>
  
  
  </mapper>